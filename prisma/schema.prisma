generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}





model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?   // For email and password login
  
  // Relations
  sessions      Session[]
  accounts      Account[]
  
  // App Specific Relations
  ownedWorkspaces Workspace[]       @relation("Owner")
  memberships     WorkspaceMember[]
  filePermissions FilePermission[] 
  
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}



model Workspace {
  id        String   @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner       User              @relation("Owner", fields: [ownerId], references: [id])
  members     WorkspaceMember[]
  files       File[]
  invitations Invitation[]      // For pending invites
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        String   @default("MEMBER") // "OWNER", "EDITOR", "READER"
  joinedAt    DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
}

model Invitation {
  id          String       @id @default(cuid())
  email       String
  workspaceId String
  token       String       @unique // Secure token for the email link
  status      String       @default("PENDING") // PENDING, ACCEPTED
  createdAt   DateTime     @default(now())

  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}



model File {
  id          String   @id @default(cuid())
  title       String
  content     Json?  // Content stored as JSON blocks for the editor 
  isFolder    Boolean  @default(false) 
  workspaceId String
  parentId    String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  level       Int      @default(0)

  // Relations
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  // Recursive Relation (File inside a File)
  parent      File?     @relation("FileParent", fields: [parentId], references: [id], onDelete: Cascade)
  children    File[]    @relation("FileParent")
  
  permissions FilePermission[]


  @@index([workspaceId])
  @@index([parentId])

}

model FilePermission {
  id        String   @id @default(cuid())
  fileId    String
  userId    String
  
  // Granular Permissions
  canEdit   Boolean  @default(false)
  
  
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([fileId, userId])
}